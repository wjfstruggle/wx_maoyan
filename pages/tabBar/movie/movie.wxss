@import '../../template/movieIndex/movieIndex.wxss';

#movieList {
    display: flex;
    flex-direction: column;
}

#movieList .top_wrap {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    height: 88rpx;
    -webkit-box-pack: justify;
    justify-content: space-between;
    border-bottom: 2rpx solid #ccc;
}

#movieList .city,.list-wrapp .title {
    padding-left: 15px;
    font-size: 15px;
    color: #666;
    display: -webkit-box;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

#movieList .city .icon {
    margin-right: 5px;
    width: 0;
    height: 0;
    border: 4px solid #b0b0b0;
    border-left-color: transparent;
    border-right-color: transparent;
    border-bottom-color: transparent;
    display: inline-block;
    margin-left: 4px;
    margin-top: 5px;
}

#movieList .hotShow {
    display: flex;
    flex-direction: row;
    justify-content: center;
    height: 88rpx;
    line-height: 88rpx;
}

.hotShow .hot {
    font-size: 30rpx;
    color: #666;
    width: 160rpx;
    text-align: center;
    margin: 0 24rpx;
    font-weight: 500;
}

#movieList .hot.active {
    color: #ef4238;
    border-bottom: 4rpx solid #ef4238;
}

#movieList .list-wrap {
    background-color: #f5f5f5;
}

.mostExpected {
    padding-bottom: 30rpx;
}

.mostExpected .title {
    padding: 0 30rpx;
    padding-top: 20rpx;
    margin-bottom: 24rpx;
    font-size: 28rpx;
    color: #333;
}
.mostExpected .scroll_view {
    width: 170rpx;
    margin-left: 30rpx;
    overflow: hidden;
}
.mostExpected .img {
    width: 170rpx;
    height: 230rpx;
    position: relative;
    margin-bottom: 12rpx;
    overflow: hidden;
}
.mostExpected .poster {
    width: 100%;   
}

.mostExpected .name {
    margin-bottom: 3px;
    font-size: 24rpx;
    color: #333;
}

.mostExpected .data {
    font-size: 24rpx;
    color: #999;
}
.scroll_view{
    display: inline-block;
}