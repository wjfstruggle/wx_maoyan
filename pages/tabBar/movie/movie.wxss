#movieList {
    display: flex;
    flex-direction: column;
}
#movieList .list-wrap {
    background-color: #f5f5f5;
}
#movieList .list-item {
    display: flex;
    padding-left: 15px;
    background-color: #fff;
}
#movieList .img {
    margin-top: 12px;
    width: 128rpx;
    height: 180rpx;
    overflow: hidden;
}
#movieList .img image {
    width: 100%;
}
#movieList .content {
    padding: 12px 14px 12px 0;
    margin-left: 8px;
    height: 90px;
    max-height: 90px;
    position: relative;
}
#movieList .content .nm-wrap {
    max-height: 24px;
    margin-bottom: 5px;
    line-height: 44rpx;
    overflow: hidden;
}
#movieList .content .nm-wrap .nm {
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
    padding-right: 5px;
    flex-shrink: 1;
}
#movieList .content .nm-wrap .icon-2d {
    background-image: url(../../../assests/movie/2d.png);
    background-repeat:  no-repeat;
    width: 86rpx;
    height: 28rpx;
    background-size: 86rpx 28rpx;
    margin-top: 5px;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    margin-left: 3px;
}
#movieList .info {
    box-sizing: border-box;
    line-height: 1;
    overflow: hidden;
}
#movieList .info .text {
    font-size: 26rpx;
    color: #666;
}
#movieList .info .sc {
    margin-left: 5px;
    font-weight: 700;
    color: #faaf00;
    font-size: 30rpx;
}
#movieList .info .star,
#movieList .info .showInfo {
    font-size: 26rpx;
    color: #666;
    margin-top: 6px;
    line-height: 30rpx;
}